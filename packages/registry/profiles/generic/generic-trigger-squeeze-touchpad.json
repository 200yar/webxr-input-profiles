{
    "profileId": "generic-trigger-squeeze-touchpad",
    "openxrInteractionPath" : "/interaction_profiles/khr/simple_controller",
    "fallbackProfileIds": [],
    "layouts" : {
        "left-right-none" : {
            "selectComponentId": "xr-standard-trigger",
            "components": {
                "xr-standard-trigger": { "type": "trigger", "openxrComponentPath": "user/hand/*/input/trigger"},
                "xr-standard-squeeze": { "type": "squeeze", "openxrComponentPath": "user/hand/*/input/squeeze" },
                "xr-standard-touchpad": { "type": "touchpad", "openxrComponentPath": "user/hand/*/input/trackpad" }
            },
            "gamepad": {
                "mapping": "xr-standard",
                "buttons": [ 
                    "xr-standard-trigger", 
                    "xr-standard-squeeze", 
                    "xr-standard-touchpad"
                ],
                "axes":[
                    { "componentId": "xr-standard-touchpad", "axis": "x-axis"},
                    { "componentId": "xr-standard-touchpad", "axis": "y-axis"}
                ]
            }
        }
    }
}